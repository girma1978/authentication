{
  "extends": "../tsconfig.json",    // If you have shared configurations in the parent tsconfig.json
  "compilerOptions": {
    "rootDir": "src",               // Specifies the root directory for your source files
    "outDir": "dist",               // Specifies the output folder for all emitted files
    "noEmitOnError": true           // Prevent emitting files if there are TypeScript errors (optional but recommended)
  },
  "include": ["src"],               // Includes the 'src' directory in the compilation
  "typeRoots": ["./node_modules/@types", "./src/types"] // Custom type roots (optional)
}
